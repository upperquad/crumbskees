{
  "parser": "babel-eslint",
  "env": {
      "browser": true,
      "es6": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "parserOptions": {
      "ecmaVersion": 2015,
      "sourceType": "module"
  },
  "rules": {
      "arrow-parens": [
          "error",
          "as-needed"
      ],
      "no-param-reassign": [
          0,
          { "props": false }
      ],
      "no-plusplus": [
          2,
          { "allowForLoopAfterthoughts": true }
      ],
      "no-use-before-define": [
          "error",
          { "functions": false }
      ],
      "operator-linebreak": [
          "error",
          "after"
      ],
      "semi": [
          "error",
          "never"
      ],
      "no-new": [
          0
      ],
      "max-len": [
          1,
          {"code": 140}
      ],
      "class-methods-use-this": [
          0
      ],
      "prefer-destructuring": [
          "off"
      ]
  }
}